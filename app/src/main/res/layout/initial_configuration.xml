<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/initialconfiguration"
    tools:context=".InitialConfiguration">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="420dp"
        android:layout_marginTop="116dp"
        android:text="Character"
        android:textColor="#FFEB3B"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="86dp"
        android:layout_marginBottom="298dp"
        android:text="Difficulty"
        android:textColor="#FFEB3B"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="272dp"
        android:layout_marginTop="52dp"
        android:text="Name"
        android:textColor="#FFEB3B"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="356dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:inputType="text"
        android:text="Insert Name"
        android:textColor="#FFEB3B"
        android:textSize="34sp" />

    <RadioGroup
        android:id="@+id/difficultyRadioGroup"
        android:layout_width="195dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="74dp">

        <RadioButton
            android:id="@+id/radioEasy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Easy"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/radioMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/radioHard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hard"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />
    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="195dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="17dp"
        android:text="Continue"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/Daphne"
        android:layout_width="83dp"
        android:layout_height="68dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="123dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/daphne_png" />

    <ImageButton
        android:id="@+id/Fred"
        android:layout_width="100dp"
        android:layout_height="66dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="64dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/fred_png" />

    <RadioGroup
        android:id="@+id/spriteRadio"
        android:layout_width="195dp"
        android:layout_height="238dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="364dp"
        android:layout_marginBottom="19dp"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_centerHorizontal="true"
            android:text="Scooby"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/Daphne"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:text="Daphne"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/Fred"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:text="Fred"
            android:textColor="#FFEB3B"
            android:textSize="24sp" />

    </RadioGroup>

    <ImageButton
        android:id="@+id/Scooby"
        android:layout_width="101dp"
        android:layout_height="69dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="107dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/scooby_png" />

</RelativeLayout>
